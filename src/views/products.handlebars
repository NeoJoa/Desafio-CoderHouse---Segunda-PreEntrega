<div class="titlePage">
  <h1>Productos</h1>
</div>
<div class="productsContainer">
  {{#each payload}}
    <div class="productCard">
      <img class="productImg" src="{{this.thumbnails}}" />
      <div class="productTitle">{{this.title}}</div>
      <div class="productDescription">{{this.description}}</div>
      <div class="productPrice">{{this.price}}</div>
      <div class="productCategory">{{this.category}}</div>
      <button class="productButton" onclick={addToCart("{{this._id}}")}>Agregar al carrito</button>
    </div>
  {{/each}}
</div>

<div class="productsPaginate">
  <a href="{{prevLink}}" class="paginateLeftArrow">←</a>
  <div class="paginateIndexContainer">
    {{resPage}}
  </div>
  <a href="{{nextLink}}" class="paginateRightArrow">→</a>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/products.js"></script>